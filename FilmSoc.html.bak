		<div class="SlidwShow_OuterBox">
		
				<!-- Slideshow container -->
		<div class="SlideShow_Box">

		  <!-- Full-width images with number and caption text -->
		  <div class="mySlides Slide_fade">
			<div class="Slide_numbertext">1 / 3</div>
			<img src="SlideBackground.png" width="100%" height="300"/>
			<!-- <div class="Slide_text">Caption Text</div> -->
		  </div>

		  <div class="mySlides Slide_fade">
